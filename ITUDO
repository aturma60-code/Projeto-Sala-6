    <script>
      const carrinhoBtn = document.getElementById("carrinho-btn");
      const carrinho = document.getElementById("carrinho");
      const listaCarrinho = document.getElementById("lista-carrinho");
      const finalizarBtn = document.getElementById("finalizar");
      const totalDisplay = document.getElementById("total");
      const historico = document.getElementById("lista-historico");

      let itensCarrinho = [];
      let totalCarrinho = 0;
      let historicoVendas = [];

      carrinhoBtn.addEventListener("click", () => {
        carrinho.style.display =
          carrinho.style.display === "flex" ? "none" : "flex";
      });

      document.querySelectorAll(".comprar").forEach((btn) => {
        btn.addEventListener("click", () => {
          const produto = btn.dataset.produto;
          const preco = parseFloat(btn.dataset.preco);
          itensCarrinho.push({ nome: produto, preco: preco });
          atualizarCarrinho();
        });
      });

      function atualizarCarrinho() {
        listaCarrinho.innerHTML = "";
        totalCarrinho = 0;
        itensCarrinho.forEach((item, index) => {
          const li = document.createElement("li");
          li.innerHTML = `${item.nome} - R$ ${item.preco.toFixed(2)} <button onclick="removerItem(${index})">‚ùå</button>`;
          listaCarrinho.appendChild(li);
          totalCarrinho += item.preco;
        });
        totalDisplay.textContent = `Total: R$ ${totalCarrinho.toFixed(2)}`;
        carrinhoBtn.textContent = `üõí Carrinho (${itensCarrinho.length})`;
      }

      function removerItem(index) {
        itensCarrinho.splice(index, 1);
        atualizarCarrinho();
      }

      finalizarBtn.addEventListener("click", () => {
        if (itensCarrinho.length === 0) {
          alert("Carrinho vazio!");
          return;
        }
        const nome = prompt("Digite seu nome para finalizar a compra:");
        if (!nome) return;

        const compra = {
          nome,
          produtos: [...itensCarrinho],
          total: totalCarrinho.toFixed(2),
          data: new Date().toLocaleString(),
        };

        historicoVendas.push(compra);
        exibirHistorico();

        itensCarrinho = [];
        atualizarCarrinho();
        alert("Compra finalizada com sucesso!");
      });

      function exibirHistorico() {
        historico.innerHTML = "";
        historicoVendas.forEach((c) => {
          const div = document.createElement("div");
          div.classList.add("compra");
          div.innerHTML = `
          <p><strong>Cliente:</strong> ${c.nome}</p>
          <p><strong>Data:</strong> ${c.data}</p>
          <p><strong>Produtos:</strong> ${c.produtos.map((p) => p.nome).join(", ")}</p>
          <p><strong>Total Pago:</strong> R$ ${c.total}</p>
        `;
          historico.appendChild(div);
        });
      }
    </script>
